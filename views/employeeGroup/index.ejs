<% include ../header.ejs %>

<div id="main-content">
    <div class="container">
        <div class="row">
            <div id="content" class="col-lg-12">
                <div class="row" style="margin-top: 20px">
                    <!-- 新增工单按钮 -->
                    <div class="col-xs-6">
                        <a class="btn btn-info" href="/employeeGroup/edit" role="button"><i class="fa fa-plus-square"></i> 新建员工组</a>
                    </div>
                    <!-- 搜索 -->
                    <div class="col-xs-6 clearfix">
                        <select class="form-control" style="width: 22%;float: left;">
                            <option value="">标题</option>
                            <option value="">客户</option>
                            <option value="">渠道</option>
                            <option value="">状态</option>
                        </select>
                        <form class="form-inline hidden-xs" action="" method="post" style="width: 76%;float: right;margin-left: 2%">
                            <div class="input-group input-medium">
                                <input type="text" class="form-control" placeholder="请输入搜索的内容">
										<span class="input-group-btn">                   
											<button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
										</span>
                            </div>
                        </form>
                    </div>
                </div>


                <!-- 列表 -->
                <table class="table table-bordered" style="margin-top: 20px;background: #fff">
                    <thead>
                    <tr class="text-center">
                        <td><input class="check-all" type="checkbox"/></td>
                        <td>序号</td>
                        <td>名称</td>
                        <td>创建时间</td>
                        <td></td>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(i in data){%>
                    <tr class="text-center">
                        <td><input type='checkbox' name='ids' id='' class='ids' value='<%= data[i].sg_id %>'></td>
                        <td class="ids"><%= data[i].sg_id%></td>
                        <td><%= data[i].sg_name%></td>
                        <td> <%= data[i].datetime %></td>
                        <td>
                            <a href="/employeeGroup/details?id=<%= data[i].sg_id %>" class="btn btn-primary">查 看</a>
                            <a href="/employeeGroup/edit?id=<%= data[i].sg_id %>" class="btn btn-success">修 改</a>
                            <a href="#" data-toggle='modal' data-target='#isDel' id='alertDel' class="btn btn-danger">删 除</a>
                        </td>
                    </tr>
                    <% } %>
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>
<!--************************************************************************ 提示是否删除 *********************************************-->
<div class="modal fade" id="isDel" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" id="move-gongdan">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="bootbox-close-button close" style="margin-top: -10px;">×</button>
                <div class="bootbox-body">是否删除此项?</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
                <a href="" class="btn btn-success" id="isdelete">确 定</a>
            </div>
        </div>
    </div>
</div>
</section>
<script>
    $(function(){
        $('.table tbody tr').find('#alertDel').click(function(){
            var ids=$(this).parents('tr').find(".ids").html();
            console.log(ids);
            $('#isdelete').attr('href','/employeeGroup/del?id='+ids);
        });
    });
<% include ../footer.ejs %>